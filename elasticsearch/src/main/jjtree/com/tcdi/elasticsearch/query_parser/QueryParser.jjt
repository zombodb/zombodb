QueryParserNode Word() #Word :
{
    Token t;
}
{
    (
        ( (t = <WORD>) | (t = <IDENTIFIER>) | (t = <DOTTED_IDENTIFIER>) ) {
            String word = t.image;
            if (word.startsWith("'") || word.startsWith("\""))
                word = word.substring(1, word.length()-1);
            jjtThis.value = word;
        }
    )
    { return jjtThis; }
}

