  | <BOOL_QUERY: "#bool" >
  | <MUST: "#must" >
  | <SHOULD: "#should" >
  | <MUST_NOT: "#must_not" >

  | <PROX: "w/"(<DIGIT>)+ >
  | <ORDERED_PROX: "wo/"(<DIGIT>)+ >

  | <IDENTIFIER: <LETTER> (<LETTER> | <DIGIT>)* >
  | <DOTTED_IDENTIFIER: <IDENTIFIER> ("." <IDENTIFIER>)+ >
  | <TYPENAME: "<" (<LETTER> (<LETTER> | <DIGIT>)*)+ ">" >

  | <NUMBER: (("-")? (["1"-"9"]) (<DIGIT>)* ("." (<DIGIT>)+)?) | (("0")+ ("." (<DIGIT>)+)) | ("0") >

  | <WORD:
               (~["'","\"",":","*","~","?","!","%","&","(",")",",","<","=",">","[","]","^"," ","\r","\n","\t","\f"] | ("\\"~[]))+
           | ("'" ((~["'","*","?","~"," ","\r","\n","\t","\f"] | ("\\"~[]))+) "'")
           | ("\"" ((~["\"","*","?","~"," ","\r","\n","\t","\f"] | ("\\"~[]))+) "\"")
    >


  | <PREFIX: (<WORD> ("*")+)
            | "'"  (<WORD> ("*")+) "'"
            | "\"" (<WORD> ("*")+) "\"" >
  | <WILDCARD: (("*" | "?")* <WORD> (("*" | "?") <WORD>)* ("*" | "?")*)
             | "'" (("*" | "?")* <WORD> (("*" | "?") <WORD>)* ("*" | "?")*) "'"
             | "\"" (("*" | "?")* <WORD> (("*" | "?") <WORD>)* ("*" | "?")*) "\"" >
  | <NOT_NULL: ("*") | ("?") | ("\"*\"") | ("\"?\"") >
  | <FUZZY: ( <WORD>
             | ("'" <WORD> "'")
             | ("\"" <WORD> "\"")
            ) "~" (<DIGIT>)* >
  | <PHRASE: (      ("\"" (~["\""] | "\\\"")* "\"") |
                    ("'"  (~["'"]  | "\\'")*  "'")
             ) ("~" ("!")? (<DIGIT>)+)?
    >
  | <SCRIPT: "$$" (~[])* "$$" >

  | <#LETTER: ["a"-"z", "_"] >
  | <#DIGIT: ["0"-"9"] >
}

private ASTQueryTree parse0() #QueryTree :
{
}
{
    ( Aggregations() | Options() | FieldLists() )* [ Expression() ] <EOF>
    {
        return jjtThis;
    }
