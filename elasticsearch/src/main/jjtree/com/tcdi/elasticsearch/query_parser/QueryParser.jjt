}
{
    (
        t = <PREFIX>
        {
            if ( (t.image.startsWith("'") && t.image.endsWith("'")) || (t.image.startsWith("\"") && t.image.endsWith("\"")) )
                t.image = t.image.substring(1, t.image.length()-1);

            jjtThis.value = t.image.substring(0, t.image.indexOf('*'));
        }
    )
    { return jjtThis; }
}

